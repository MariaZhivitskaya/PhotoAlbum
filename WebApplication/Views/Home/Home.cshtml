@model WebApplication.ViewModels.UserViewModel

@{
    ViewBag.Title = "My profile";
}

<h2>Home</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Name:</dt>
        <dd>@Model.Name</dd>
        <dt>Surname:</dt>
        <dd>@Model.Surname</dd>
        <dt>Date of birth:</dt>
        <dd>@Model.DateOfBirth.ToString("dd/MM/yyyy")</dd>
        <dt>Email:</dt>
        <dd>@Model.Email</dd>
        @if (Model.RoleId.Equals(1))
        {
            @Html.Action("Users", "Home")
        }
    </dl>
</div>